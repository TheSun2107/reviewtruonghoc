<form class="container mt-4" method="POST" action="/school/{{school._id}}/updateSchool/?_method=PUT">
    <h1 class="">Sửa thông tin trường học</h1>
    <div class="form-group">
        <label for="name">Tên trường học</label>
        <input type="text" class="form-control" name="name" value="{{school.name}}" id="name" placeholder="Tiểu học Mỹ Đình I/ Đại học Bách Khoa Hà Nội">
    </div>
    <div class="form-group">
        <label for="location">Địa chỉ</label>
        <input type="text" class="form-control" name="location" value="{{school.location}}" id="location" placeholder="Mỹ Đình, Hà Nội">
    </div>
    <div class="row">
        <div class="form-group col-6 mt-4">
            <label for="level">Trình độ</label>
            <select class="custom-select" name="level" value="{{school.level}}" id="level" required>
                <option value="">--chọn trình độ--</option>
                <option value="Mầm non">Mầm non</option>
                <option value="Tiểu học">Tiểu học</option>
                <option value="Trung học cơ sở">Trung học cơ sở</option>
                <option value="Trung học phổ thông">Trung học phổ thông</option>
                <option value="Đại học">Đại học</option>
            </select>
            <div class="invalid-feedback">Example invalid custom select feedback</div>
        </div>
        <div class="form-group col-6">
            <label for="size">Số lượng học sinh</label>
            <select class="form-control" name="size" value="{{school.size}}" id="size">
                <option value="">--chọn quy mô--</option>
                <option value="500">0-500</option>
                <option value="1000">501-1000</option>
                <option value="1500">1001-2000</option>
                <option value="2000">>2000</option>
            </select>
        </div>
    </div>
    <div class="form-group mt-4">
        <label for="url">Trang web trường</label>
        <textarea class="form-control" name="url" id="url" rows="1" placeholder="uet.vnu.edu.vn">{{school.url}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Gửi yêu cầu</button>
</form>